{
    "languageserver": {
        "ccls": {
            "enable": true,
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                "compile_commands.json"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": ".cache/ccls"
                }
            }

        }
    },
    "clangd.enabled": true,
    "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/14.0.0/clangd_14.0.0/bin/clangd",
    "clangd.fallbackFlags": ["-std=c++17"]
}
