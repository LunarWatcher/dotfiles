<!-- BEGIN -->
<ThermalConfiguration>
        <Platform>
                <Name>Override CPU default passive</Name>
                <ProductName>*</ProductName>
                <Preference>PERFORMANCE</Preference>
                <ThermalZones>
                        <ThermalZone>
                                <Type>x86_pkg_temp</Type>
                                <TripPoints>
                                        <TripPoint>
                                                <SensorType>x86_pkg_temp</SensorType>
                                                <Temperature>30000</Temperature>
                                                <type>active</type>
                                                <ControlType>PARALLEL</ControlType>
                                                <CoolingDevice>
                                                    <type>Processor</type>
                                                </CoolingDevice>
                                        </TripPoint>
                                </TripPoints>    
                        </ThermalZone>
                </ThermalZones>
        </Platform>
</ThermalConfiguration>
<!-- END -->
